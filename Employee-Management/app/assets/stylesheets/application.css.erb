/*
 *= require_self
 *= require jquery.ui.all
 *= require_tree .
 */
dd{
  height: 20px;
}

.brand:hover{
  background-color: transparent;
}

.search-span{
  margin-right: 25px;
}

.search-query{
  margin-top: 5px;
}

.btn-mini{
  color: #ffffff;
}

.field_name{
  color: #0088cc;
  display: inline;
}

.field_name:hover{
  cursor: pointer;
  cursor: hand;
  background-color: black;
  color: white;
}

form.button_to{
  display: inline-block;
  margin: 0px;
}

.table td{
  padding: 5px;
}

.btn-primary:visited, .btn-danger:visited{
  color: white;
}

.nav-list a:hover{
  color: black;
  background-color: #eeeeee;
}

.float-left {
  float: left;
}

.float-right {
  float: right;
}

.clear-float {
  clear: both;
}

.field_with_errors{
  background-color: white;
  display: block;
}

.alert-error{
  font-size: 15px;
}



.logout-button{
  display: inline;
  margin-right: 20px;
  margin-left: 20px;
}

.cumpolsary-field:after{
  content: "*";
  display: inline;
  clear: both;
  color: red;
}

.date-field{
  background-image:url( <%= asset_path 'calendar-blue.jpeg' %> );
  background-repeat:no-repeat;
  background-position: right;
  background-size: 12%;
}

#involvement-column >  .decreasing,.increasing{
  display: none;
}

#involvement-column:hover{
  cursor: pointer;
}

.date-field:hover{
  cursor: pointer;
}

.progress-bar{
  display: none;
}

#new_project_assignment{
  margin-bottom: 50px;
}

.save_button, .cancel_button{
  display: none;
}

.hide{
  display: none;
}