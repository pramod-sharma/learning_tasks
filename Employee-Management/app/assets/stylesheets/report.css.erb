.projectTable{
	display: table;
	width: 100%;
	border: 1px dotted #808080;
}

.projectTable .row {
  display: table-row;
}

.projectTable .span9 {
  display: table-cell;
  border-right: 1px dotted #808080;
}

.projectTable .span3{
  display:table-cell;
	text-align: right;
}

.blank_row{
	height: 30px;
}

.table td{
	padding: 3px;
}

.project, .involvement{
	padding: 0px 3px;
}

#line_chart_div {
	width: 100%;
	height: 500px;
}

.revenue-projection-details{
	width: 100%;
}

.tab-content{
	overflow: visible;
}

.title_row{
	font-size: 18px;
	font-weight: bold;
	background-color: #F5F5F5;
	color: black;
	padding: 10px 5px;
	margin: 5px 0px;
}

.average-involved{
	background-color: #F7F5C6 !important;
}

.fully-involved{
	background-color: #FAE1E1 !important;
}

.fully-available{
	background-color: #D6F8D6 !important;
} 
 
.total_revenue td{
	font-size: 18px;
}

.total-month-revenue td{
	font-size: 22px;
}

#tables_div{
	margin-top: 20px;
}

a.report_link, a.report_link:visited{
	color: black;
}

#charts_div{
	float: left;
	width: 100%;
}

.pie-generation-info{
	float: left;
	width: 100%;
	margin-top: 15px;
}

#charts_div .span4{
	margin-left: 0px;
}

#availability_utilization{
	display: inline;
}

#relieving_employee_table{
	margin: 20px 0 20px 0;
}

.breadcrumb .divider{
	margin: 0px 5px;
}

#revenue_date{
  background-image:url( <%= asset_path 'calendar-blue.jpeg' %> );
  background-repeat:no-repeat;
  background-position: right;
  background-size: 20%;
}

#billing_date{
  background-image:url( <%= asset_path 'calendar-blue.jpeg' %> );
  background-repeat:no-repeat;
  background-position: right;
  background-size: 10%;
}

td.revenue_row{
	text-align: right;
}

.revenue_table .tr{
	padding: 5px 0px;
}

label[for=billing_date]{
	display: inline;
	margin-right: 25px;
}

#revenue_date:hover{
	cursor: pointer;
}

.revenue_progress_bar{
	display: none;
}

.details_link{
	text-align: center;
}

.color-box {
	width: 20px;
	height: 20px;
	margin: 0 5px;
	border: 1px solid black;
}

.red{
	background-color: red;
}

.red:after{
	content: 'Fully Involved Employee';
  display: inline;
  clear: both;
  color: black;
}

.green{
	background-color: green;
}

.green:after{
	content: 'Fully Available Employee';
  display: inline;
  clear: both;
  color: black;
}

.yellow{
	background-color: yellow;
}

.yellow:after{
	content: 'Partially Available Employee';
  display: inline;
  clear: both;
  color: black;
}

#notification_div table{
	width: 70%;
}

#notification_div td{
	padding: 5px 5px;
}

label[for='toggle']{
	display: inline;
	margin-left: 5px;
	vertical-align: sub;
	margin-bottom: 0px !important;
}

