<%= form_for @project_assignment, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @project_assignment.errors.any? %>
    <%= render( :partial => 'shared/errors', :object => @project_assignment.errors ) =%>
  <% end %>

  <div class="control-group">
    <%= f.label :employee_id, :class => 'control-label cumpolsary-field' %>
    <div class="controls">
    <%= select_tag 'project_assignment[employee_id]', options_for_select( employee_options( nil), params[:employee_id] ) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :project_id, :class => 'control-label cumpolsary-field' %>
    <div class="controls">
    <%= select_tag 'project_assignment[project_id]', options_for_select( project_options, params[:project_id]) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :join_from , "Join From", :class => 'control-label cumpolsary-field' %>
    <div class="controls">
      <%= f.text_field :join_from,  :class => 'date-field',
        :value => format_date( @project_assignment.join_from || Date.current )%>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :relieving_date, "Relieving Date", :class => 'control-label cumpolsary-field' %>
    <div class=" controls">
      <%= f.text_field :relieving_date, :class => 'date-field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :involvement, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :involvement, :class => 'text_field' , :value => 0%>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Save', :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', ( session[:referer] || project_assignments_path ), class: "btn" %>
  </div>
<% end %>